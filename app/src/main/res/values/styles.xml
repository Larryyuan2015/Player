<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_bar_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/titlebar_padding_left</item>
        <item name="android:paddingRight">@dimen/titlebar_padding_right</item>
        <item name="android:textSize">@dimen/titlebar_subtitle_size</item>
        <item name="android:textColor">@color/title_bar_btn_text_color</item>
    </style>

</resources>
